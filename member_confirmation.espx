<# apply webuser.<#[url.mid]#> as "member" .#>

<# 
	update record for "webuser.<#[url.mid]#>" reference as "member";
	set member.status to "active";
	set member.billing_cid to "<#[url.contact_id]#>";
#>


<# if ("<#[webstyle.notification_site_email]#>" == ""){
