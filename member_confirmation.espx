<# if ( "<#[url.mid]#>" <> "" ) {
	send email;
		from_name = "<#[webstyle.notification_site_email]#>";
		to = "<#[member.email]#>";
		subject = "Membership Charge";
		type = "html"; // text or html
		bodypage = "email_member_charge?mid=<#[url.mid]#>";
}
#>


