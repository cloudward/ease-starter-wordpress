			break;
		case "purchase":
			$('#contacts_form').hide();
			$('#purchase_form').show();
			$('#contact_form').hide();
			$('#blog_form').hide();
			break;
		case "contact":
			$('#contacts_form').hide();
			$('#purchase_form').hide();
			$('#contact_form').show();
			$('#blog_form').hide();
			break;
		case "blog":
			$('#contacts_form').hide();
			$('#purchase_form').hide();
			$('#contact_form').hide();
			$('#blog_form').show();
			break;
	}
	
});

